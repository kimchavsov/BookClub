<% layout('layouts/boilerplate') %> 
  <div class="row">
    <h1 class="text-center">Edit Book</h1>
    <div class="col-6 offset-3">
      <form action="/books/<%= book._id %>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="book[title]" required value="<%= book.title  %> ">
        </div>
        <div class="mb-3">
          <label class="form-label" for="author">Author</label>
          <input class="form-control" type="text" id="author" name="book[author]" required value="<%= book.author %> ">
        </div>
        <div class="mb-3">
          <label class="form-label" for="cover">Book Cover</label>
          <input class="form-control" type="text" id="cover" name="book[cover]" required value="<%= book.cover %>">
        </div>
        <div class="mb-3">
          <label class="form-label" for="page">Page</label>
          <input class="form-control" type="text" id="page" placeholder="00" aria-lable="page" aria-describedby="page" name="book[page]" required value="<%= book.page %> ">
        </div>
        <!-- <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
        </div> -->
        <button class="btn btn-primary mb-3">Update Book</button>
        </form>
        <a href="/books/<%= book._id %>">Back</a>
      </div>
  </div>
  
  <script>
    (() => {
    'use strict'
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    const forms = document.querySelectorAll('.validated-form')

    // Loop over them and prevent submission
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
  </script>