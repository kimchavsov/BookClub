<% layout('layouts/boilerplate') %> 
<div class="container-fluid w-75">
  <% for (let book of books) {%> 
      <div class="card mb-3 text-md-start text-center">
        <div class="row">
          <div class="col-md-4 col-sm-12">
            <img class='card-img-top img-fluid' src="<%= book.cover %>" alt="" style="width: 10rem;">
          </div>
          <div class="col-md-8 col-sm-12">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %> </h5>
              <p class="card-text d-none d-md-block"><%= book.author %> </p>
              <p class="card-text">
                <small class="text-muted d-none d-md-block"> Progess: <%=book.progress %>/<%= book.page %>  </small>
              </p>
              <p class="card-text d-none d-md-block">Status: <%= book.status %> </p>
              <a class="btn btn-primary" href="/books/<%= book._id %> ">View Book</a>
            </div>
          </div>
        </div>
      </div>
  <% } %>  
</div>