<% layout('layouts/boilerplate') %> 
<body>
  <div class="row">
    <div class="col-8 offset-3">
      <div class="card mb-3">
        <img src="<%= book.cover %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <p class="card-text"><%= book.author %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">Progress: <%= book.progress %>/<%=book.page  %> <Button class="btn btn-light" type="button" data-bs-toggle="modal" data-bs-target="#progressForm">Update</Button> </li>
          <li class="list-group-item">Status: <%= book.status %> </li>
        </ul>
        <div class="card-body">
          <a href="/books/<%= book._id %>/edit" class="card-link btn btn-info">Edit </a>
          <form class="d-inline" action="/books/<%= book._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <div class="card-footer text-muted">
          Added: 11 days ago
        </div>
      </div>
    </div>
  </div>

  <!-- Modal (Popup progress form)  -->
  <div class="modal fade" id="progressForm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Update Progress</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
         <form action="">
          <div class="mb-3">
            <label class="form-label" for="title">Current Progress</label>
            <input class="form-control" type="number" id="title" name="book[title]" min="0" max="<%= book.page %>" required value="<%= book.progress %>">
          </div>
         </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-success">Update</button>
        </div>
      </div>
    </div>
  </div>

</body>
