<% layout('layouts/boilerplate') %>
<div class="container">
  <h2>Edit Note</h2>
  <form action="/notes/<%= note._id %>?_method=PUT" method="POST" novalidate class="validated-form">
    <div class="mb-3">
      <label class="form-label" for="title">Books</label>
      <select class="form-select" name="note[book]" aria-label="Default select example">
        <% for (const book of books) {%> 
          <option value="<%= book._id %>" <%= (book._id.equals(note.book._id))? "selected": ""%>><%= book.title %> </option>
        <% } %> 
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label" for="author">Title</label>
      <input class="form-control" type="text" id="author" name="note[title]" required value="<%= note.title %>">
    </div>
    <div class="mb-3">
      <label class="form-label" for="content">Content</label>
      <textarea class="form-control" id="content" rows="5" name="note[content]" required><%= note.content %></textarea>
    </div>
    <button class="btn btn-success mb-3">Submit</button>
  </form>
</div>