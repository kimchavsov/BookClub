<% layout('layouts/boilerplate') %>
<div class="container">
  <h2>Create a new Note</h2>
  <form action="/notes" method="POST" novalidate class="validated-form">
    <div class="mb-3">
      <label class="form-label" for="title">Books</label>
      <!-- Drop down to select which book the note belong to -->
      <input class="form-control" type="text" id="title" name="note[book]" required>
    </div>
    <div class="mb-3">
      <label class="form-label" for="author">Title</label>
      <input class="form-control" type="text" id="author" name="note[title]" required>
    </div>
    <div class="mb-3">
      <label class="form-label" for="content">Content</label>
      <textarea class="form-control" id="content" rows="5" name="note[content]" required> </textarea>
    </div>
      
    <button class="btn btn-success mb-3">Submit</button>
  </form>
</div>