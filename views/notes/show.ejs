<% layout('layouts/boilerplate') %>

<div class="container">
  <a class="btn btn-primary mb-3" href="/notes">Back</a>
  <div class="card">
    <div class="card-body">
      <div class="card-title mb-3">
        <h5><%= note.title %></h5>
      </div>
      <div class="card mb-3">
        <p class="card-body"><%= note.content %></p>
      </div>
      <form action="/notes/<%= note._id %>?_method=DELETE" method="POST">
        <a class="btn btn-success mb-2" href="/notes/<%= note._id %>/edit">Edit</a>
        <button class="btn btn-danger mb-2">Delete</button>
      </form>
    </div>
  </div>
</div>